{
    "compilerOptions": {
        "noImplicitAny": true,
        "strictNullChecks": true,
        "outDir": "dist",
        "module": "commonjs",
        "experimentalDecorators": true,
        "lib": [
            "dom",
            "es2015",
            "es2015.promise"
        ],
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "target": "es5"
    },
    "include": [
        "./parse-that/*.ts",
        "./purr-on/*.ts",
        "./purr.ts"
    ],
    "exclude": [
        "node_modules",
    ]
}